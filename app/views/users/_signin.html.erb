<%= form_tag controller: 'users', action: 'login' do %>
      <div class="field">
        <%= label_tag :login, 'Имя пользователя:' %>
        <%= text_field_tag :login, params[:login] %>
      </div>
      <div class="field">
        <%= label_tag :password, 'Пароль:' %>
        <%= password_field_tag :password, params[:password] %>
      </div>
      <div>
        <%= submit_tag 'Войти' %>
      </div>
<% end %>