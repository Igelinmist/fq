<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :login %><br />
    <%= f.text_field :login %>
  </div>

  <div class="field">
    <%= f.label 'Пароль' %><br />
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label 'Подтверждение пароля' %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="field">
    <%= f.label 'Фамилия' %><br />
    <%= f.text_field :surname %>
  </div>
  <div class="field">
    <%= f.label 'Имя (Отчество)' %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label 'Структурное подразделение' %><br />
    <%= f.select :subdivision,['ТЭЦ-2', 'ТЭЦ-3', 'ТЭЦ-4', 'ТЭЦ-5', 'КРК', 'УТИТ', 'УПЭК', 'УИТ'], include_blank: :true %>
  </div>
  <div class="field">
    <%= f.label 'Роль' %><br />
    <%= f.select :role,['admin','edit','view'] %>
  </div>
  <div class="actions">
    <%= f.submit 'Принять' %>
  </div>
<% end %>
