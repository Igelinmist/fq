<div class="fq_form">
  <% if flash[:alert] %>
    <p id="notice"><%= flash[:alert] %></p>
  <% end %>

  <%= form_tag do %>
    <fieldset>
      <legend>Зарегистрируйтесь, пожалуйста</legend>
      <div class="field">
        <%= label_tag :login, 'Login:' %>
        <%= text_field_tag :login, params[:login] %>
      </div>
      <div class="field">
        <%= label_tag :password, 'Пароль:' %>
        <%= password_field_tag :password, params[:password] %>
      </div>
      <div>
        <%= submit_tag 'Войти' %>
      </div>
    </fieldset>
  <% end %>
</div>

